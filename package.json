{
  "name": "otaku-toolbox",
  "version": "0.36.1",
  "private": true,
  "engines": {
    "node": ">=v14.16",
    "npm": ">=7.7"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "dev": "node scripts/watch.js",
    "build": "node scripts/build.js",
    "buildEnvTypes": "node scripts/buildEnvTypes.js",
    "precompile": "cross-env MODE=production npm run build",
    "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "pretest": "cross-env MODE=test npm run build",
    "test": "node tests/app.spec.js",
    "lint": "eslint . --ext js,ts,vue",
    "pretypecheck": "npm run buildEnvTypes",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck-main && npm run typecheck-preload && npm run typecheck-renderer"
  },
  "browserslist": [
    "Chrome 91"
  ],
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/dplayer": "^1.25.2",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/electron-json-storage": "^4.5.0",
    "@types/glob": "^7.2.0",
    "@types/qs": "^6.9.7",
    "@types/superagent": "^4.1.13",
    "@types/superagent-proxy": "^3.0.0",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "cross-env": "^7.0.3",
    "electron": "^22.3.9",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^7.27.0",
    "eslint-plugin-vue": "^7.10.0",
    "lint-staged": "^11.0.0",
    "sass": "^1.34.1",
    "spectron": "^15.0.0",
    "terser": "^5.16.6",
    "typescript": "^4.3.2",
    "vite": "^4.3.6",
    "vite-plugin-externals": "^0.6.2",
    "vue-tsc": "^1.6.5"
  },
  "dependencies": {
    "@arco-design/web-vue": "^2.44.2",
    "@ljw1412/ionicons-sprite": "^1.0.1",
    "@vueuse/core": "^9.13.0",
    "bilibili-live-ws": "^6.0.3",
    "buffer": "^6.0.3",
    "chartist": "^1.3.0",
    "cheerio": "^1.0.0-rc.10",
    "dayjs": "^1.10.6",
    "electron-json-storage": "^4.5.0",
    "electron-updater": "^5.0.1",
    "events": "^3.3.0",
    "glob": "^7.2.0",
    "pako": "^2.0.4",
    "qs": "^6.10.1",
    "superagent": "^6.1.0",
    "superagent-proxy": "^3.0.0",
    "tesseract.js": "^2.1.5",
    "tippy.js": "^6.3.1",
    "validator": "^13.11.0",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "xgplayer": "^2.31.4",
    "xgplayer-hls.js": "^2.6.1"
  }
}
